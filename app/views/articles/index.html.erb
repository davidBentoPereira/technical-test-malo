<div class="bg-white py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Nos articles</h2>
      <p class="mt-2 text-lg leading-8 text-gray-600">Apprenez comment aider votre enfant à grandir en bonne santé !</p>
    </div>

    <!-- Notice -->
    <% if notice %>
      <div class="rounded-md bg-green-50 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <div class="mt-2 text-sm text-green-700">
              <p><%= notice %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Search Form -->
    <%= form_with url: articles_path, method: :get do |f| %>
      <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
        <div class="sm:col-span-2">
          <!-- Input Search -->
          <%= f.label "Search", class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= f.search_field :title_or_content_or_tags_cont, value: @query, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
          <div class="mt-2">
            <!-- Submit -->
            <%= f.submit "Chercher", class: "rounded bg-white px-2 py-1 text-xs font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50"%>
            <!-- Button clear filter -->
            <%= link_to root_path do  %>
              <button type="button" class="rounded bg-white px-2 py-1 text-xs font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50">Réinitialiser la recherche</button>
            <% end %>
          </div>

          <!-- Search Results Counter -->
          <div class="mt-2">
            <% if @query %>
              <p class="text-sm text-gray-500"><%= @articles.count %> articles trouvés</p>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Button "Add article" -->
      <div class="text-right">
        <%= link_to new_article_path do %>
          <button type="button" class="inline-flex items-center gap-x-1.5 rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
            Ajouter un article
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="-mr-0.5 h-5 w-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
            </svg>
          </button>
        <% end %>
      </div>

    <% end %>

    <div class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 border-t border-gray-200 pt-10 sm:mt-16 sm:pt-16 lg:mx-0 lg:max-w-none lg:grid-cols-3">
      <!-- Articles -->
      <% @articles.each do |article| %>
        <%= render article %>
      <% end %>
    </div>
  </div>
</div>





